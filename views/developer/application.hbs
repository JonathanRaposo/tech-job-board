<div class="form-container">
  <form action="/developer/apply/{{foundId._id}}" method="POST" class="the-form" id="application-form">
    <label>First Name:
      <input type="text" name="jobTitle" value="{{user.firstname}}" />
    </label>

    <label>Last Name:
      <input type="text" name="company" value="{{user.lastname}}" />
    </label>

    <label> Email:
      <input type="text" name="email" cols="30" rows="4" value="{{user.email}}" />
    </label>
    <label> Resume
      <textarea name="resume" rows="8" cols="50" class="text-area">
{{#if user.resume}}
{{user.resume}}
{{else}}
Full name:

Job:

Education:

Skills:

Contact number:

{{/if}}
</textarea>
    </label>
    <button>Apply</button>
    {{!-- <a href="/">Cancel</a> --}}
  </form>

</div>