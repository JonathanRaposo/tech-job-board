{{#if jobId}}
<div class="form-container">
<form action="/developer/apply/{{jobId}}" method="POST" class="the-form">
  <label>First Name:
    <input  type="text" name="jobTitle" value="{{user.firstname}}" />
  </label>

  <label>Last Name:
    <input type="text" name="company" value="{{user.lastname}}" />
  </label>
  <label> Email:
    <input type="text" name="email" cols="30" rows="4" value="{{user.email}}" />
  </label>
   </label>
   <label> Contact:
    <input type="text" name="contact" cols="30" rows="4" value="{{user.contact}}" required />
  </label>
<label> Resume
<textarea  name="resume" rows="8" cols="50" >
{{#if user.resume}}
{{user.resume}}
{{else}}
Full name:
Job:
Education:
Skills:
Contact number:
{{/if}}
</textarea>
 </label>
  <button>Apply</button>
   <a href="/">Cancel</a>
</form>
</div>
{{/if}}

