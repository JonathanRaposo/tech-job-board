 <title>Developer Sign Up</title>
<a href="/" class="back-link">back</a>
<div class="form-container">
  <h2>Sign up as a Developer</h2>
  {{#if jobId}}
  <a href="/developer/login?applyto={{jobId}}" class="login-link">Already have an account? login</a>
  <form action="/developer/signup?applyto={{jobId}}" method="POST" class="the-form">

    <label> First name
      <input type="text" name="firstname" placeholder="john" required autofocus >
    </label>

    <label> Last name
      <input type="text" name="lastname" placeholder="doe" required>
    </label>

    <label> Contact number:
      <input type="text" name="contact" placeholder="(123) 456-7890" required>
    </label>


    <label> Email
      <input type="email" name="email" placeholder="john@email.com" required>
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" required>
    </label>

    <button type="submit">Create</button>
    <br>

    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>

</div>

{{else}}
