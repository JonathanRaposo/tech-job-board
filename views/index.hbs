<title>{{title}}</title>

<div id="job-search-section">


    <form action="/jobs/search" method="GET">
        <h3 class="search-jobs-heading">Search for Tech Jobs</h3>
        <input type="text" name="q" placeholder="Job title or keyword" id="search-input-field" autofocus>
        <button type="submit" class="job-search-btn">Search Jobs</button>
    </form>
</div>

<h3 class="suggested-job-heading">Suggested jobs</h3>
<ul class="list-wrapper">
    {{#each jobs}}
    <li class="company-info">
        <h3 class="list-company-job-title">{{this.jobTitle}}</h3>
        <h4 class="list-company-name">{{this.company}}</h4>
        <p class="list-company-location">{{this.location}}</p>
        <a href="/jobs/{{this._id}}" class="job-details-btn">See description</a>

    </li>
    {{/each}}
</ul>