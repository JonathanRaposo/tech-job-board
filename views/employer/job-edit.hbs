
<div class="form-container">
<form action="/employer/{{user._id}}/edit" method="POST" class="the-form">
  <label>Job Title:
    <input  type="text" name="jobTitle" value="{{user.jobTitle}}" />
  </label>

  <label>Company
    <input type="text" name="company" value="{{user.company}}" />
  </label>


    <textarea rows="4" cols="50">
Description:
   {{user.description}}
  
    </textarea>
    
 

  <label> Salary:
    <input type="number" name="salary"  value="{{user.salary}}" step="10000"/>
  </label>
 
  <button>Save changes</button>
   <a href="/employer/jobs">Cancel</a>
</form>

</div>